    <script>
            function mapShow(id) {
                console.log(id);
                $.ajax({
                url: "./"+id+".html",
                method: "GET",
                success: function (result) 
                {
                    console.log("./"+id+".html");
                    var htmlFiltered = $(result).filter("#mapPart");
                    console.log(htmlFiltered.html());
                    var finalText = htmlFiltered.html();
                    $("#mapContent").html(finalText);
                }
                });
                }
            </script>
